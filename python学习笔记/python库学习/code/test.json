{
    "version": 1,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple"
        },
        "file": {
            "class": "logging.FileHandler",
            "filename": "logging.log",
            "level": "DEBUG",
            "formatter": "simple"
        }
    },
    "loggers": {
        "StreamLogger": {
            "handlers": [
                "console"
            ],
            "level": "DEBUG"
        },
        "FileLogger": {
            "handlers": [
                "console",
                "file"
            ],
            "level": "DEBUG"
        }
    }
}